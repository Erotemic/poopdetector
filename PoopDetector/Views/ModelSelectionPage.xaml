<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  
   x:Class="PoopDetector.Views.ModelSelectionPage"  
   xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
   xmlns:viewModels="clr-namespace:PoopDetector.ViewModel"  
   Title="Select a Model"  
   x:DataType="viewModels:PoopCameraViewModel" 
    BackgroundColor="#A6000000"
   >  
   <VerticalStackLayout Padding="10">  

       <Label Text="Choose which model to use:"  
              FontSize="Large"  
              HorizontalOptions="Center" />  

       <CollectionView  
           ItemsSource="{Binding ModelTypes}"  
           SelectionMode="Single"  
           SelectedItem="{Binding SelectedModelType, Mode=TwoWay}">  
           <!-- <CollectionView.ItemTemplate>  
               <DataTemplate >  
                   <StackLayout Padding="10">  
                       <Label Text="{Binding}"  
                              FontSize="Medium" />  
                   </StackLayout>  
               </DataTemplate>  
           </CollectionView.ItemTemplate>   -->
       </CollectionView>  

       <Button Text="Close" Clicked="CloseButton_Clicked"  
               VerticalOptions="EndAndExpand" />  
   </VerticalStackLayout>  
</ContentPage>
